SELECT 
    br1.pts_res_group_id,
    pts.mer_num,
    pts.us_currency_amt,
    pts.trn_dt,
    pts.susp_reas_cd,
    pts.work_of_dt,
    pts.case_status_id,
    CASE 
        WHEN br1.pts_res_group_id IS NULL 
             OR pts.pts_res_group_id IS NULL THEN 'Invalid'
        WHEN pts.case_status_id = 20 THEN 'Already Closed'
        ELSE 'Scheduled'
    END AS status
FROM apex_mod.bulk_resolution_data br1
LEFT JOIN eresuser_owner.pts_case pts
       ON br1.pts_res_group_id = pts.pts_res_group_id
WHERE br1.job_id = :JOB_ID;





SELECT 
    br1.pts_res_group_id,
    pts.mer_num,
    pts.us_currency_amt,
    pts.trn_dt,
    pts.susp_reas_cd,
    pts.work_of_dt,
    pts.case_status_id,
    CASE 
        WHEN br1.pts_res_group_id IS NULL 
             OR pts.pts_res_group_id IS NULL THEN 'Invalid'
        WHEN pts.case_status_id = 20 THEN 'Already Closed'
        ELSE 'Scheduled'
    END AS status
FROM apex_mod.bulk_resolution_data br1
LEFT JOIN eresuser_owner.pts_case pts
       ON br1.pts_res_group_id = pts.pts_res_group_id
WHERE br1.job_id = :JOB_ID;







SELECT
    br1.pts_res_group_id,
    pts.mer_num,
    pts.us_currency_amt,
    pts.trn_dt,
    pts.susp_reas_cd,
    pts.work_of_dt,
    -- Removed the original problematic CASE statement for better clarity
    CASE
        WHEN pts.pts_res_group_id IS NULL THEN 'Invalid'  -- Check for no matching record in pts
        ELSE decode(pts.case_status_id, 20, 'Already Closed', 'Scheduled')
    END as status
FROM
    apex_mod.bulk_resolution_data1 br1
LEFT JOIN
    eresuser_owner.pts_case pts ON br1.pts_res_group_id = pts.pts_res_group_id
WHERE
    br1.job_id = :JOB_ID;










SELECT 
    job_id,
    submission,
    date_added,
    status,
    user_added,

    CASE 
      WHEN status = 'SUCCESSFUL' THEN
        -- disabled button
        '<button class="t-Button t-Button--danger t-Button--small" disabled>Cancel</button>'
        WHEN status = 'CANCELLED' THEN
        -- disabled button
        '<button class="t-Button t-Button--danger t-Button--small" disabled>Cancel</button>'
        WHEN status = 'FAILED' THEN
        -- disabled button
        '<button class="t-Button t-Button--danger t-Button--small" disabled>Cancel</button>'


      ELSE
        -- active button
        '<button class="t-Button t-Button--danger t-Button--small cancel-row" '||
        'data-jobid="'||job_id||'">Cancel</button>'
    END AS cancel_button

FROM bulk_resolution_data
ORDER BY job_id DESC;
