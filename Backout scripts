BEGIN
  DBMS_SCHEDULER.create_job (
    job_name        => 'JOB_BULK_RESOLUTION',
    job_type        => 'PLSQL_BLOCK',
    job_action      => 'BEGIN ERESUSER_OWNER.SP_BULK_RESOLUTION(); END;',
    start_date      => (SYSTIMESTAMP AT TIME ZONE ''America/New_York''),
    repeat_interval => 'FREQ=DAILY; BYHOUR=22; BYMINUTE=45; BYSECOND=0',
    enabled         => TRUE
  );
END;
/





(function(){
    var irRegions = ['VALID_RECORDS','INVALID_RECORDS'];

    function resetIRPage(staticId){
        try {
            var region = apex.region(staticId);
            if(region && region.call){
                region.call("paginate", {
                    page: 1
                });
            }
        } catch(e) {}
    }

    // Reset on page load
    irRegions.forEach(function(r){
        resetIRPage(r);

        // Also reset after IR refresh
        try {
            var reg = apex.region(r);
            if (reg && reg.widget) {
                reg.widget().on("apexafterrefresh", function() {
                    resetIRPage(r);
                });
            }
        } catch(e){}
    });
})();